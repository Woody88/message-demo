<%= simple_form_for(@message, url: '/messages', action: :create) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :content %>
  	<%= f.input :conversation_id, as: :hidden,input_html: {value: @convo}%>
  	<%= f.input :participant_id, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
